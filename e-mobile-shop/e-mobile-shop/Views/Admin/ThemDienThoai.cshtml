@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model e_mobile_shop.Models.SanPham
@{
    ViewData["Title"] = "ThemDienThoai";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <style>
        .field-validation-error {
            color: red
        }

        .validation-summary-errors {
            color: red
        }
    </style>


    <body>
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Thêm điện thoại
                </div>
                <div class="panel-body">
                    <form enctype="multipart/form-data" role="form" asp-action="ThemDienThoai" asp-controller="Admin" method="post">
                        <div class="form-group">
                            <label asp-for="TenSp">Tên sản phẩm</label>
                            <input class="form-control" asp-for="TenSp">
                            <span asp-validation-for="TenSp"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="HangSx">Hãng sản xuất</label>
                            <input asp-for="HangSx" class="form-control">
                            <span asp-validation-for="HangSx"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="XuatXu">Xuất xứ</label>
                            <input class="form-control" asp-for="XuatXu">
                            <span asp-validation-for="XuatXu"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SoLuong">Số lượng</label>
                            <input asp-for="SoLuong" class="form-control">
                            <span asp-validation-for="SoLuong"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="GiaGoc">Giá gốc</label>
                            <input type="number" asp-for="GiaGoc" class="form-control">
                            <span asp-validation-for="GiaGoc"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GiaTien">Giá bán</label>
                            <input type="number" asp-for="GiaTien" class="form-control">
                            <span asp-validation-for="GiaTien"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AnhDaiDien" >Ảnh đại diện</label>
                            <input onchange="loadFile(event)" type="file" asp-for="AnhDaiDien" class="form-control">

                        </div>
                        <img id="output" />

                        <div class="form-group">
                            <label asp-for="AnhKhac">Ảnh khác</label>
                            <input type="file" asp-for="AnhKhac" class="form-control">

                        </div>

                        <div class="form-group">
                            <label>Mô tả</label>
                            <textarea class="form-control" rows="3" asp-for="MoTa"></textarea>
                            <script>
                                CKEDITOR.replace('MoTa');
                            </script>
                        </div>
                        <button type="submit" name="submit" class="btn btn-default">Submit Button</button>
                        <button type="reset" class="btn btn-default">Reset Button</button>
                    </form>
                </div>
            </div>
        </div>
        
        <script>
            var loadFile = function (event) {
                var image = document.getElementById('output');
                image.src = URL.createObjectURL(event.target.files[0]);
                image.style.width = 300;
                image.style.height = 150;
            };
        </script>
    </body>


