<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-infinitescroll/3.0.6/infinite-scroll.pkgd.min.js"></script>
<script>
    $(document).ready(function () {
        var x = document.getElementsByClassName("page-content");
        for (i = 1; i < x.length; i++) {
            document.getElementById(i).style.display = 'none';
        }
    });

    $('#pagination-demo').twbsPagination({
        first: '',
        last: '',
        next: '<i class="fas fa-arrow-right"></i>',
        prev: '<i class="fas fa-arrow-left"></i>',
        totalPages: 3,
        visiblePages: 3,
        onPageClick: function (event, page) {
            //fetch content and render here
            var x = document.getElementsByClassName("page-content");
            for (i = 0; i < x.length; i++) {
                document.getElementById(i).style.display = 'none';
            }
            document.getElementById(String(page-1)).style.display = 'block';
        }
    });

</script>